@model EtuBlog.Models.Makale

<link href="~/css/detay.css" rel="stylesheet" />

<div class="main">
    
    <div class="container">

        <!--
          - BLOG SECTION
        -->
       
        <div class="blog" >

            <h2 class="h2">@Model.makaleBaslik</h2>   
            <div class="blog-card-group">

                <div class="blog-card">

                    <div class="wrapper-flex">

                        <div class="profile-wrapper">
                            <img src="@Model.Yazar.yazarResim" alt="YazarResim" width="50">
                        </div>

                        <div class="wrapper">
                            <a class="h4">@Model.Yazar.yazarAdi @Model.Yazar.yazarSoyadi</a>

                            <p class="text-sm">
                                <time datetime="2022-01-17">@Model.makaleEklenmeTarihi.ToString("dd MMMM yyyy")</time>
                                <span class="separator"></span>
                                <img src="~/assets/images/view-number.png" alt="view number" width="20">
                                <h4 class="h4">@Model.makaleGoruntulenmeSayisi</h4>
                            </p>
                        </div>

                    </div>
                    <img class="blogContentImg" src="@Model.makaleResim" alt="">
                    <div class="blogContent">
                        <h4 class="h4"> @Html.Raw(@Model.makaleIcerik)</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








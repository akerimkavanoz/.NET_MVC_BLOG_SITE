@model EtuBlog.Models.Makale

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var kategoriler = ViewBag.Kategoriler;
}



<script type="text/javascript" src="~/Content/Script/js/plugins/bootstrap/bootstrap-file-input.js"></script>
<script type="text/javascript" src="~/Content/Script/js/plugins/bootstrap/bootstrap-select.js"></script>
<script type="text/javascript" src="~/Content/Script/js/plugins/tagsinput/jquery.tagsinput.min.js"></script>
<script src="~/Content/ckeditor/ckeditor.js"></script>


<!-- RENDER -->
<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("MakaleDuzenle", "MakaleYonetimi", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.makaleID)
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Makale Ekle <a style="color:red;" href="/Admin/Giris/Anasayfa">Geri</a></h3>
                            <ul class="panel-controls">
                                <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                            </ul>
                        </div>

                        <div class="panel-body">

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Makale Başlık</label>
                                <div class="col-md-6 col-xs-12">

                                    <span><span class=""></span></span>
                                    <input type="text" class="col-md-12" name="makaleBaslik" value="@Model.makaleBaslik">

                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Makakle İçerik</label>
                                <div class="col-md-6 col-xs-12">
                                    <textarea class="ckeditor" rows="10" name="makaleIcerik"> "@Model.makaleIcerik"</textarea>
                                    <span class="help-block"></span>

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Resimli</label>
                                <div class="col-md-6 col-xs-12">
                                    <input type="file" class="fileinput btn-primary" name="ResimYolu" id="filename" title="Resim Seç" />
                                    
                                    <span class="help-block"></span>
                                </div>
                            </div>

                        </div>
                        <div class="panel-footer">
                            <button class="btn btn-default">Temizle</button>
                            <button class="btn btn-primary pull-right">Kaydet</button>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
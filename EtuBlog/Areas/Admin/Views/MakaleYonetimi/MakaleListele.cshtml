@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<EtuBlog.Models.Makale>
<!-- RENDER -->
<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12">
            <!-- START DATATABLE EXPORT -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Makale Listesi</h3>
                    <ul class="panel-controls">
                        <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                        <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
                        <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Makale Başlık</th>
                                @*<th>Yazar</th>*@
                                <th>Ekleme Tarihi</th>
                                <th>Görüntülenme Sayısı</th>
                                <th style="width:200px">Araçlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.makaleID</td>
                                <td>@item.makaleBaslik</td>
                                @*<td>@item.Yazar.yazarAdi + @item.Yazar.yazarSoyadi</td>*@
                                <td>@item.makaleEklenmeTarihi.ToString("dd MMMM yyyy")</td>

                                <td>@item.makaleGoruntulenmeSayisi</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "MakaleDuzenle", new { id = item.makaleID }, new { @class = "btn btn-info btn-sm" })

                                    @Html.ActionLink("Sil", "MakaleSil", new { id = item.makaleID }, new { @class = "btn btn-info btn-sm" })
                                </td>
                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>